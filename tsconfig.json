{
  "compilerOptions": {
    "target": "es5",            
    "module": "commonjs",       
   
    "rootDir": "./",            

    "strict": true,             

    "strictPropertyInitialization": false, 
    "baseUrl":  "./src",
    "paths": {},         
    "esModuleInterop": true,
    
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               

    
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true ,   
    "resolveJsonModule": true
  }
}
